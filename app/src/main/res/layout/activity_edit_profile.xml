<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="423dp"
        android:layout_height="250dp">

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/update_imageView"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:background="@drawable/round_profile_pic"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/textViewEmailAdress"
                android:layout_width="377dp"
                android:layout_height="55dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/email"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>


        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="35sp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <ImageView
                android:id="@+id/imageViewName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/profile_name_textView"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/name"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/buttonEditName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_name_textView"
                android:drawableRight="@drawable/ic_border_color_black_24dp"
                style="?android:attr/borderlessButtonStyle"
                android:onClick="buttonClickedEditName"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <ImageView
                android:id="@+id/imageViewSurname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/profile_surname_textView"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/lastname"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/buttonEditSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_name_textView"
                android:drawableRight="@drawable/ic_border_color_black_24dp"
                style="?android:attr/borderlessButtonStyle"
                android:onClick="buttonClickedEditSurname"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <ImageView
                android:id="@+id/imageViewSchool"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_school_black_24dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/profile_school_textView"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/university"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/buttonEditPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_name_textView"
                android:drawableRight="@drawable/ic_border_color_black_24dp"
                style="?android:attr/borderlessButtonStyle"
                android:onClick="buttonClickedEditPhoneNo"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <ImageView
                android:id="@+id/imageViewMajor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_business_center_white_24dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/profile_major_textView"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/major"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/buttonEditMajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_name_textView"
                android:drawableRight="@drawable/ic_border_color_black_24dp"
                style="?android:attr/borderlessButtonStyle"
                android:onClick="buttonClickedEditPhoneNo"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
        </TableRow>

        <TextView
            android:id="@+id/btn_log_out"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_style"
            android:clickable="true"
            android:gravity="center"
            android:onClick="navigateLogOut"
            android:text="@string/action_logout"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/btn_change_password"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/change_password"
            android:onClick="navigateChangePass"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/button_style"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>